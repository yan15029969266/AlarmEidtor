                            <div class="col-xs-4"><label>停线工位：</label>{{AlarmEidt.Station}}</div>
                            <div class="col-xs-4"><label>位置信息：</label>{{AlarmEidt.Position}}</div>
                        </div>
                        <div class="form-group">
                            <label>时间段选择:</label>
                            <div class="input-group">

                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <input type="text" class="form-control pull-right" id="dateRange">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">责任类型</label>
                            <select class="form-control" ng-model="AlarmEidt.Division_of_respon" ng-options="x for x in Division_of_respons"></select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">责任部门</label>
                            <select class="form-control" ng-model="AlarmEidt.Responsible" ng-options="x for x in Responsibles"></select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">停线原因</label>
                            <input class="form-control" ng-model="AlarmEidt.Reason" placeholder="停线原因">
                        </div>
                        @*<div class="form-group">
                            <label for="exampleInputEmail1">呼叫类型</label>
                            <select class="form-control" ng-model="AlarmEidt.Alarm_class" ng-options="x for x in AlarmClasses" disabled></select>
                        </div>*@
                        @*<div class="form-group">
                            <label for="exampleInputEmail1">停线工位</label>
                            <input class="form-control" ng-model="AlarmEidt.Station" placeholder="停线工位" disabled>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">位置信息</label>
                            <input class="form-control" ng-model="AlarmEidt.Position" placeholder="位置信息" disabled>
                        </div>*@

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" ng-click="SaveChange()">保存修改</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
