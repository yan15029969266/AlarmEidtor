<script>
    var app = angular.module('myApp', []);
    app.controller('AlarmEditCtrl', function ($scope,$http) {
        $scope.AlarmClasses = [];
        $scope.AlarmAreas = [];
        $scope.Division_of_respons = [];
        $scope.Responsibles = []
        $scope.Total = 0;

        $scope.today = new Date(new Date().setHours(08, 00, 00, 00));
        var day = new Date();
        day.setTime(day.getTime()+24*60*60*1000);
        //$scope.Tday.setTime(day3.getTime() + 24 * 60 * 60 * 1000);

        $scope.Filter = {
            Start_time: new Date(new Date().setHours(08, 00, 00, 00)),
            End_time: new Date(day.setHours(08, 00, 00, 00)),
            Alarm_class: null,
            Alarm_area: null,
            PageSize: 20,
            PageIndex: 1
        }
            
        $scope.AlarmEidt = {
            Seq_number: null,
            Start_time: null,
            End_time: null,
            Reason: null,
            Responsible: null,
            Division_of_respon: null,
            Alarm_class: null,
            Position: null,
            Station:null,
        }

        $scope.init = function () {
            $scope.loadData(true);
            $http.post('/Home/IntFilter').then(
                function successCallback(response) {
                    $scope.AlarmClasses = response.data.alarmClasses
                    $scope.AlarmAreas = response.data.alarmAreas;
                    $scope.Division_of_respons = response.data.Division_of_respons;
                    $scope.Responsibles = response.data.Responsibles;
                },
                function errorCallback(response) {
                    // 请求失败执行代码
                });

            $('#reservationtime').daterangepicker({
                timePicker: true,
                timePickerSeconds: true,
                timePicker24Hour: true,
                locale: {
                    "format": "YYYY-MM-DD HH:mm:ss",
                    "separator": " 至 ",
                    "applyLabel": "应用",
                    "cancelLabel": "取消",
                    "fromLabel": "From",
                    "toLabel": "To",
                    "customRangeLabel": "Custom",
                    "daysOfWeek": [
                      "日",
                      "一",
                      "二",
                      "三",
                      "四",
                      "五",
                      "六"
                    ],
                    "monthNames": [
                      "一月",
                      "二月",
                      "三月",
                      "四月",
                      "五月",
                      "六月",
                      "七月",
                      "八月",
                      "九月",
                      "十月",
                      "十一月",
                      "十二月"
                    ],
                    "firstDay": 1
                },
                
                startDate: $scope.Filter.Start_time,
                endDate: $scope.Filter.End_time
    
                
            }, function (start, end, label) {
                $scope.Filter.Start_time = start;
                $scope.Filter.End_time = end;
            });
        }

        $scope.search = function () {
            $scope.Filter.PageIndex = 1
            $scope.loadData(true);
        }

        $scope.loadData = function (isInitpagination) {
            $http.post('GetAlarmEditList', $scope.Filter).then(
                function successCallback(response) {
                    $scope.Total = response.data.iTotalDisplayRecords;
                    //$scope.names = response.data.sites;
                    $scope.dataTabls = response.data.aaData;
                    if (isInitpagination == true) {
                        $scope.Initpagination();
                    }
                },
                function errorCallback(response) {
                    // 请求失败执行代码
                });
        }

        $scope.Initpagination = function () {
            $('.M-box11').pagination({
                totalData: $scope.Total,
                showData: 20,
                jump: true,
                callback: function (api) {
                    $scope.Filter.PageIndex = api.getCurrent()
                    $scope.loadData(false);
                }
            });
        }

        $scope.Edit = function (item, num) {
            $scope.AlarmEidt.ID = item.ID;
            $scope.AlarmEidt.Reason = item.Reason;
            $scope.AlarmEidt.Responsible = item.Responsible;
            $scope.AlarmEidt.Division_of_respon = item.Division_of_respon;
            $scope.AlarmEidt.Start_time = eval('new ' + item.Start_time.substr(1, item.Start_time.length - 2));
            $scope.AlarmEidt.End_time = eval('new ' + item.End_time.substr(1, item.End_time.length - 2));
            $scope.AlarmEidt.Alarm_class = item.Alarm_class;
            $scope.AlarmEidt.Position = item.Position;
            $scope.AlarmEidt.Station = item.Station;
            //alert($scope.AlarmEidt.Reason);
            $('#dateRange').daterangepicker({
                timePicker: true,
                timePickerSeconds: true,
                //timePickerIncrement: 30,
                timePicker24Hour: true,
                locale: {
                    "format": "YYYY-MM-DD HH:mm:ss",
                    "separator": " 至 ",
                    "applyLabel": "应用",
                    "cancelLabel": "取消",
                    "fromLabel": "From",
                    "toLabel": "To",
                    "customRangeLabel": "Custom",
                    "daysOfWeek": [
                      "日",
                      "一",
                      "二",
                      "三",
                      "四",
                      "五",
                      "六"
                    ],
                    "monthNames": [
                      "一月",
                      "二月",
                      "三月",
                      "四月",
                      "五月",
                      "六月",
                      "七月",
                      "八月",
                      "九月",
                      "十月",
                      "十一月",
                      "十二月"
                    ],
                    "firstDay": 1
                },
                startDate: item.Start_timeStr,
                endDate: item.End_timeStr
            }, function (start, end, label) {
                $scope.AlarmEidt.Start_time = start;
                $scope.AlarmEidt.End_time = end;
            });
        }

        $scope.Remove = function (item, num) {
            bootbox.confirm({
                buttons: { confirm: { label: '确定' }, cancel: { label: '取消' } },
                message: "确认删除此条数据?",
                callback: function (result) {
                    if (result) {
                        $http.post('DeleteAlarmEidt', {ID:item.ID}).then(
                        function successCallback(response) {
                            if(response.data==true)
                            {
                                //$scope.Filter.PageIndex = 1
                                $scope.loadData(false);
                                toastr.success("删除成功！")
                            }
                            else {
                                toastr.error("删除失败！")
                            }
                        },
                        function errorCallback(response) {
                            // 请求失败执行代码
                            toastr.warning("发生异常请联系管理员！")
                        });
                    }
                }
            });
        }

        $scope.SaveChange = function () {

            $http.post('AlarmEditSaveChange', $scope.AlarmEidt).then(
                function successCallback(response) {
                    if (response.data == true) {
                        //$scope.Filter.PageIndex = 1
                        $scope.loadData(false);
                        $('#modal-default').modal('hide')
                        toastr.success("编辑成功！")
                    }
                    else {
                        toastr.error("编辑失败！")
                    }
                },
                function errorCallback(response) {
                    toastr.warning("发生异常请联系管理员！")
                    // 请求失败执行代码
                });
        }

        $scope.Export = function () {
            //$state.go('AlarmEditExoprt', $scope.Filter)
            //new Date($scope.Filter.Start_time).toLocaleDateString()
            var startTime = new Date($scope.Filter.Start_time).toLocaleDateString() + " " +  new Date($scope.Filter.Start_time).getHours() + ":" +  new Date($scope.Filter.Start_time).getMinutes() + ":" +  new Date($scope.Filter.Start_time).getSeconds();
            var endTime = new Date($scope.Filter.End_time).toLocaleDateString() + " " + new Date($scope.Filter.End_time).getHours() + ":" + new Date($scope.Filter.End_time).getMinutes() + ":" + new Date($scope.Filter.End_time).getSeconds();
            var Alarm_area = $scope.Filter.Alarm_area;
            var Alarm_class = $scope.Filter.Alarm_class;
            if (typeof ($scope.Filter.Alarm_area) == "undefined" || $scope.Filter.Alarm_area==null) {
                Alarm_area = "";
            }
            if (typeof ($scope.Filter.Alarm_class) == "undefined" || $scope.Filter.Alarm_class==null) {
                Alarm_class = "";
            }
            location.href = "/Alarm/AlarmEditExoprt?Start_time="
                + startTime
                + "&End_time=" + endTime
                + "&Alarm_class=" + Alarm_class
                + "&Alarm_area=" + Alarm_area;
        }

    });


</script>
