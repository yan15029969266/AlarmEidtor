<div ng-app="myApp" ng-controller="AlarmEditCtrl" ng-init="init()">
    <section class="content-header sub_head">
        <h1>
            设置
            <small> 暗灯编辑</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <i class="fa fa-dashboard"></i>
                    主页
                </a>
            </li>
            <li class="active">
                <a href="">设置</a>
            </li>
            <li class="active">暗灯编辑</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">

            <div class="col-xs-12">
                @*<div class="btn-toolbar">
                        <button class="btn btn-primary margin" onclick="AddComment()">增加</button>
                        <button class="btn btn-primary margin" onclick="ModifyComment()">修改</button>
                        <button class="btn btn-primary margin" onclick="DeleteComment()">删除</button>
                    </div>*@
                <div class="box">
                    @*<div class="box-header with-border">
                        <h3 class="box-title">筛选</h3>
                    </div>*@
                    <div class="box-body">
                        <div class="row">

                            <div class="col-xs-6">
                                <label>时间段选择:</label>
                                <div class="input-group">

                                    <div class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="reservationtime">
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <label>呼叫类型:</label>
                                <select class="form-control" ng-init="Filter.Alarm_area = AlarmClasses[0]" ng-model="Filter.Alarm_class" ng-options="x for x in AlarmClasses"></select>
                            </div>
                            <div class="col-xs-3">
                                <label>报警区域:</label>
                                <select class="form-control" ng-init="Filter.Alarm_area = AlarmAreas[0]" ng-model="Filter.Alarm_area" ng-options="x for x in AlarmAreas"></select>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        @*<button type="submit" class="btn btn-default">清除</button>*@
                        <button type="submit" class="btn btn-info pull-right" ng-click="search()">搜索</button>
                        <button type="submit" class="btn btn-success" ng-click="Export()">导出</button>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-body">
                            <div class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <caption>暗灯编辑表格</caption>
                                    <thead>
                                        <tr>
                                            <th>开始时间</th>
                                            <th>结束时间</th>
                                            <th>持续时间</th>
                                            <th>停线原因</th>
                                            <th>责任部门</th>
                                            <th>责任类型</th>
                                            <th>停线工位</th>
                                            <th>位置信息</th>
                                            <th>呼叫类型</th>
                                            <th>停线区域</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="x in dataTabls">
                                            <td>{{ x.Start_timeStr }}</td>
                                            <td>{{ x.End_timeStr }}</td>
                                            <td>{{ x.DurationStr }}</td>
                                            <td>{{ x.Reason }}</td>
                                            <td>{{ x.Responsible }}</td>
                                            <td>{{ x.Division_of_respon }}</td>
                                            <td>{{ x.Station }}</td>
                                            <td>{{ x.Position }}</td>
                                            <td>{{ x.Alarm_class }}</td>
                                            <td>{{ x.Alarm_area }}</td>
                                            <td>
                                                <button type="button" class="btn btn-info btn-sm" style="padding:3px 5px" ng-click="Edit(x,$index+1)" data-toggle="modal" data-target="#modal-default">编辑</button>
                                                <button type="button" class="btn btn-danger btn-sm" style="padding:3px 5px" ng-click="Remove(x, $index+1)">删除</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="m-style M-box11"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
