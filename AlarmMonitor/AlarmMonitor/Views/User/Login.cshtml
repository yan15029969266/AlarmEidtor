<body class="hold-transition login-page" ng-app="myApp" ng-controller="UserCtrl">
    <div class="login-box">
        <div class="login-logo">
            <b>比亚迪</b>长沙</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">登录你的账户</p>
            <form action="">
                <div class="form-group has-feedback">
                    <input class="form-control" placeholder="账户" ng-model="User.UID">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="密码" ng-model="User.PWD">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-offset-8 col-xs-4">
                        <a class="btn btn-primary btn-block btn-flat" ng-click="Login()">登录</a>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
</body>
</html>
    <!-- jQuery 3 -->
<script src="../../bower_components/jquery/dist/jquery.min.js"></script>
